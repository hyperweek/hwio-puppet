[s3]
bucket=<%= @s3_bucket %>

[mysql]
host=<%= @mysql_host %>
port=<%= @mysql_port %>
username=<%= name %>
password=<%= name %>
database=<%= name %>

[redis]
host=<%= @redis_host %>
port=<%= @redis_port %>

[memcached]
host=<%= @memcached_host %>
port=<%= @memcached_port %>
key_prefix=<%= name %>

[solr]
host=<%= @solr_host %>
port=<%= @solr_port %>
path=http://%(host)s:%(port)s/solr/<%= name %>

[email]
host=<%= @email_host %>
port=<%= @email_port %>
username=<%= @email_username %>
password=<%= @email_password %>
use_tls=<%= email_use_tls %>